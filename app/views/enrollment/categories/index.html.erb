<p id="notice"><%= notice %></p>

<h1>이수영역 정보</h1>

<table class="table">
  <thead>
    <tr>
      <th>이수영역</th>
      <th>정보</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.info %></td>
        <td><%= link_to '자세히', category %></td>
        <td><%= link_to '수정', edit_enrollment_category_path(category) %></td>
        <td><%= link_to '삭제', category, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

