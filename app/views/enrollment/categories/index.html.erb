<p id="notice"><%= notice %></p>

<%= content_tag :h1, '카테고리 분류' %>

<table>
  <thead>
    <tr>
      <th>이름</th>
      <th>내용</th>
      <th colspan="3">데이터 수정</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.info %></td>
        <td><%= link_to '자세히', category_lectures_path(category) %></td>
        <td><%= link_to '수정', edit_category_path(category) %></td>
        <td><%= link_to '삭제', category, method: :delete, data: { confirm: '삭제하시겠습니까?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새 강의 분류', new_category_path %>

<style>
  table, th, tr, td
  {
    text-align: center;
    border: 1px solid black;
  }
</style>
